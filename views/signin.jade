doctype html
html
	head
		meta(charset='utf-8')
		title 登录
		link(href='/stylesheets/base.css', rel='stylesheet')
		link(href='/stylesheets/login.css', rel='stylesheet')
	body
		div.login-area
			a.logo(href='/')
				img(src='/images/logo_blue.png')
			form.login-form(action='/signin', method='post')
				input(type='email', name='email', placeholder='邮箱', required, autofocus)
				input(type='password', name='pass', placeholder='密码', required)
				button(type='submit') 登录
			a.register.pull-right(href='/signup') 没有账号？

		if error != null
			p.error
				= msg.content
